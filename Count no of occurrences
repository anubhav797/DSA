//Find upper bound and lower bound and return {upper bound - lower bound)
class Solution {
public:
    int lowerBound(const vector<int>& arr, int target) {
        int n = arr.size();
        int low = 0, high = n - 1;
        int ans = n;

        while (low <= high) {
            int mid = low + (high - low) / 2;

            if (arr[mid] >= target) {
                ans = mid;
                high = mid - 1;
            } else {
                low = mid + 1;
            }
        }
        return ans;
    }

    int upperBound(const vector<int>& arr, int target) {
        int n = arr.size();
        int low = 0, high = n - 1;
        int ans = n;

        while (low <= high) {
            int mid = low + (high - low) / 2;

            if (arr[mid] > target) {
                ans = mid;
                high = mid - 1;
            } else {
                low = mid + 1;
            }
        }
        return ans;
    }

    int countOccurrences(const vector<int>& arr, int target) {
        int n = arr.size();

        int lb = lowerBound(arr, target);
        if (lb == n || arr[lb] != target) {
            return 0;   // target not present
        }

        int ub = upperBound(arr, target);
        return ub - lb;
    }
};
